@model Downstream.Models.TicketIssueTypeViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Tickets" asp-action="Index" method="get">
    <p>
        
        <select asp-for="TicketIssueType" asp-items="Model.IssueTypes">
            <option value="">All</option>
        </select>
  
        Title: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tickets![0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tickets![0].IssueType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tickets![0].TimeEntered)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tickets![0].RequiredResolutionTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Tickets!) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IssueType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeEntered)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequiredResolutionTime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


<div class="border border-info text-center">
<p1>There are currently</p1> @ViewBag.TicketsCount <p1>ticket(s)</p1>
</div>
